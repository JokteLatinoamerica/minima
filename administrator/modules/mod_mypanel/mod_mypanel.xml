<?xml version="1.0" encoding="utf-8"?>
<install type="module" version="1.6" client="administrator" method="upgrade">
    <name>Minima myPanel</name>
    <author>Marco Barbosa</author>
    <creationDate>October 2010</creationDate>
    <copyright>Copyright (C) 2010 Webnific. All rights reserved.</copyright>
    <license>GNU General Public License version 2 or later; see LICENSE.txt</license>
    <authorEmail>iam@marcobarbosa.com</authorEmail>
    <authorUrl>http://marcobarbosa.com</authorUrl>
    <version>0.8</version>
    <description>This module provides a panel for the minima template.</description>
    <files>
        <filename module="mod_mypanel">mod_mypanel.php</filename>
        <filename>helper.php</filename>
        <filename>index.html</filename>
        <folder>tmpl</folder>
    </files>
    <params>
        <param
            name="layout"
            type="modulelayouts"
            label="JField_Alt_Layout_Label"
            description="JField_Alt_Module_Layout_Desc"
            module="mod_menu"
            client_id="1">
        </param>

    </params>
    <params group="advanced">
        <param name="cache" type="list" default="1" label="Caching" description="Select whether to cache the content of this module">
            <option value="1">Use global</option>
            <option value="0">No caching</option>
        </param>
    </params>
</install>
