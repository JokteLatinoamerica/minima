<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install PUBLIC "-//Joomla! 1.5//DTD template 1.0//EN" "http://www.joomla.org/xml/dtd/1.5/template-install.dtd">
<install type="template" version="1.6" client="administrator" method="upgrade">
    <name>Minima Template</name>
    <creationDate>July 2010</creationDate>
    <author>Marco Barbosa</author>
    <authorEmail>iam@marcobarbosa.com</authorEmail>
    <authorUrl>http://minimatemplate.com</authorUrl>
    <copyright>Copyright (C) 2010 Webnific. All rights reserved.</copyright>
    <license>GNU General Public License version 2 or later; see LICENSE.txt</license>
    <version>0.8</version>
    <description>Minima backend template. Enjoy!</description>
    <files>
        <filename>component.php</filename>
        <filename>cpanel.php</filename>
        <filename>error.php</filename>
        <filename>favicon.ico</filename>
        <filename>index.html</filename>
        <filename>index.php</filename>
        <filename>login.php</filename>
        <filename>logo_minima.png</filename>
        <filename>PIE.htc</filename>
        <filename>templateDetails.xml</filename>
        <filename>template_preview.png</filename>
        <filename>template_thumbnail.png</filename>
        <folder>css</folder>
        <folder>elements</folder>
        <folder>html</folder>
        <folder>language</folder>
        <folder>images</folder>
        <folder>js</folder>
    </files>
    <languages>
        <language tag="en-GB">language/en-GB/en-GB.tpl_minima.ini</language>
        <language tag="en-GB">language/en-GB/en-GB.tpl_minima.sys.ini</language>
    </languages>
    <positions>
        <position>cp_shell</position>
        <position>debug</position>
        <position>footer</position>
        <position>icon</position>
        <position>menu</position>
        <position>panel</position>
        <position>title</position>
        <position>toolbar</position>
        <position>shortcuts</position>
        <position>submenu</position>
        <position>status</position>
        <position>search</position>
        <position>widgets-first</position>
        <position>widgets-last</position>
    </positions>
    <config>
        <fields name="params">
            <fieldset name="basic">
                <field
                    name="templateLogo"
                    type="media"
                    default="images/logo_minima.png"
                    label="TPL_MINIMA_LOGO_LABEL"
                    description="TPL_MINIMA_LOGO_DESCRIPTION"
                    exclude="\.html" hide_default="no" />
                <field type="loader" label="" name="Loader" addfieldpath="/administrator/templates/minima/elements" />
                <field
                    name="templateColor"
                    type="text"
                    default="#2A94C8"
                    label="TPL_MINIMA_COLOR_LABEL"
                    description="Choose the main color of the template (default is #2A94C8)"
                    size="10" />
                <field
                    name="darkerColor"
                    type="hidden"
                    default="#247eaa"
                    label="" />
            </fieldset>
        </fields>
    </config>
</install>
